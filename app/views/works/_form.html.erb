<%= form_with model: [commition, work] do |f| %>
  <table class="table align-middle">
    <% if work.errors.any? %>
      <%= render "layouts/errors", model: work %>
    <% end %>
    <tbody>
      <tr>
        <td class="w-50">依頼者名</td>
        <td class="w-50"><%= commition.name %></td>
      </tr>
      <tr>
        <td><%= f.label :title, "作業名" %></td>
        <td><%= f.text_field :title %></td>
      </tr>
      <tr>
        <td><%= f.label :date, "提出日" %></td>
        <td><%= f.date_field :date %></td>
      </tr>
      <tr>
        <td><%= f.label :memo, "メモ" %></td>
        <td><%= f.text_area :memo %></td>
      </tr>
    </tbody>
  </table>
  <div class="d-grid">
    <%= f.submit "送信", class: "btn btn-success" %>
  </div>
<% end %>