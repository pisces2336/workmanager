<div class="row">
  <div class="mx-auto col-11">
    <div class="d-flex justify-content-between">
      <h2>依頼詳細</h2>
      <div>
        <%= link_to "編集", edit_commition_path(@commition), class: "btn btn-success"%>
        <%= link_to "削除", commition_path(@commition), method: :delete, data: {confirm: "本当に削除しますか?"}, class: "btn btn-danger"%>
      </div>
    </div>

    <%= render "info", commition: @commition %>
  </div>
</div>

<div class="mt-3 row">
  <div class="mx-auto col-11 -8">
    <div class="d-flex justify-content-between align-middle">
      <h3>作業スケジュール</h3>
      <div>
        <%= link_to "新規作成", new_commition_work_path(@commition), class: "btn btn-success"%>
      </div>
    </div>

    <%= render "works/list", works: @works%>
  </div>
</div>